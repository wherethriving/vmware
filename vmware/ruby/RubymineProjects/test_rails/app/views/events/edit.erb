
<%= form_for @event,
   :url => { :controller => 'events', :action => 'update', :id => @event } do |f| %>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :capacity, "Capacity" %>
    <%= f.text_field :capacity %>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
    <%= f.submit "Update" %>

<% end %>

<%= link_to 'back', :controller => 'events', :action => 'index' %>